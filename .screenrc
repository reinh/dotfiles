startup_message off

defscrollback 5000
escape ^Gg # use ctrl-z instead of ctrl-a

hardstatus on
hardstatus alwayslastline
hardstatus string '%{= kG}[ %{G}%H %{g}][%= %{= kw}%?%-Lw%?%{r}(%{W}%n*%f%t%?(%u)%?%{r})%{w}%?%+Lw%?%?%= %{g}][%{B} %d/%m %{W}%c %{g}]'

bind b eval "writebuf" "exec sh -c 'pbcopy < /tmp/screen-exchange'" # write to OS X clipboard
